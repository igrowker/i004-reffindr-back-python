    "paths": {
        "/argenprop": {
            "get": {
                "summary": "Obtener propiedades",
                "description": "Devuelve una lista de propiedades de Argenprop.",
                "parameters": [
                {
                    "name": "pais",
                    "in": "query",
                    "required": true,
                    "type": "string",
                    "description": "País donde buscar propiedades."
                },
                {
                    "name": "limite",
                    "in": "query",
                    "required": false,
                    "type": "integer",
                    "description": "Número máximo de propiedades a devolver."
                }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de propiedades",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Property"
                            }
                        }
                    },
                    "400": {
                        "description": "Error en los parámetros"
                    },
                    "404": {
                        "description": "No se encontraron propiedades"
                    }
                }
            }
        }
    },
    "definitions": {
        "Property": {
            "type": "object",
            "properties": {
                "img": {
                    "type": "array",
                    "items": {"type": "string"}
                },
                "CountryName": {"type": "string"},
                "StateName": {"type": "string"},
                "Title": {"type": "string"},
                "Latitude": {"type": "string"},
                "Longitude": {"type": "string"},
